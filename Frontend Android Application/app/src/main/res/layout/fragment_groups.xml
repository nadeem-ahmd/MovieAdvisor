<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorObject"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/advisor_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/create_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/custom_recycler_movie"
            android:padding="17dp"
            android:text="Create Group"
            android:textColor="@color/colorObject"
            android:textSize="17dp" />

        <Button
            android:id="@+id/join_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/custom_recycler_movie"
            android:padding="17dp"
            android:text="Join Group"
            android:textColor="@color/colorObject"
            android:textSize="17dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin">

            <ListView
                android:id="@+id/genre_list_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/small_margin"
                android:listSelector="@android:color/transparent"
                tools:listitem="@layout/list_item_group" />

            <TextView
                android:id="@+id/message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/group_empty_message"
                android:textColor="@color/colorObject"
                android:textSize="17sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

